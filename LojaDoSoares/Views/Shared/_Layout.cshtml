<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="Pedro Henrique Soares" />
    <title>Soares Móveis | @ViewData["Title"]</title>
    @* <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" /> *@
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/css/styles.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css">
</head>

<body>
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg bg-light" data-bs-theme="light">
        <div class="container-fluid">
            <a asp-controller="Home" asp-action="Index" class="navbar-brand">
                    <img src="img/Logo-removebg-preview.png" alt="" width="200">
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor03"
                aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor03">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link active"asp-controller="Home" asp-action="Index">Home <span class="visually-hidden" >(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="QuemSomos">Quem Somos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Produtos">Produtos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Contatos">Contatos</a>
                    </li>
                </ul>

                <!-- Botão do Carrinho -->
                <form class="d-flex ms-auto">
                    <button class="btn btn-outline-dark" type="submit">
                        <i class="bi bi-cart-fill me-1"></i>
                        Carrinho
                        <span class="badge bg-dark text-white ms-1 rounded-pill">
                            @ViewData["Carrinho"]
                        </span>
                    </button>
                </form>
            </div>
        </div>
    </nav>

    @RenderBody()

    <!-- Footer -->
    <footer class="py-5 bg-dark">
        <div class="container">
            <p class="m-0 text-center text-white">
                &copy; 2025 Soares Móveis - Todos os direitos reservados.
                <br>
                <a href="https://www.instagram.com/pedrynnn7/" class="text-white">Instagram</a> |
                <a href="https://www.facebook.com/seuperfil" class="text-white">Facebook</a> |
                <a href="https://mail.google.com/mail/u/0/?hl=pt-BR#inbox" class="text-white">E-mail</a> |
                <a href="https://wa.me/seunumerodetelefone" class="text-white">WhatsApp</a>
            </p>
        </div>
    </footer>

    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="~/js/site.js"></script>
</body>

</html>
